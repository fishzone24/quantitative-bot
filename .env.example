# API配置
# 币安API
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret

# OKX API
OKX_API_KEY=your_okx_api_key
OKX_API_SECRET=your_okx_api_secret
OKX_PASSPHRASE=your_okx_passphrase

# Twitter API配置
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# DeepSeek API配置
DEEPSEEK_API_KEY=your_deepseek_api_key
DEEPSEEK_API_URL=https://api.deepseek.com/v1
DEEPSEEK_API_PATH=/chat/completions

# 交易所配置
EXCHANGE=binance  # 可选: binance, okx
TRADE_MODE=test   # 可选: test, live
MAX_TRADE_SIZE=10 # 单笔交易最大单位数

# 风险管理配置
STOP_LOSS=3.0     # 止损百分比
TAKE_PROFIT=2.0   # 止盈百分比
USE_DYNAMIC_SL=true  # 是否使用动态止损

# 系统配置
LOG_LEVEL=INFO    # 日志级别: DEBUG, INFO, WARNING, ERROR
DATA_REFRESH_INTERVAL=300  # 数据更新间隔(秒)
SOCIAL_REFRESH_INTERVAL=900  # 社交媒体更新间隔(秒) 